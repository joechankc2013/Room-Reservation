<%= simple_form_for([:admin, @keycard], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.input :key %>
  <%= f.association :room, as: :radio_buttons, :wrapper_html => {:class => 'inline-checkbox'} %>
  <div class="control-group">
    <div class="controls"><%= f.button :submit, 'Save', :class => 'btn-primary' %></div>
  </div>
<% end %>
